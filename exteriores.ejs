<%- include(cabecera) %>

<body>
    <div class="container">

      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#formulario2">Exteriores</a>
        </li>
      </ul>

      <div class="tab-content">


        <!-- Segundo formulario -->
        <div class="tab-pane" id="formulario2">
          <h1>Exteriores</h1>
          <div class="border p-3">
            <form class="row">

              <div class="form-group col-md-6">
                <label>Tapones de rueda:</label><br>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="tapones" id="tapones_si" value="si">
                  <label class="form-check-label" for="tapones_si">Sí</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="tapones" id="tapones_no" value="no">
                  <label class="form-check-label" for="tapones_no">No</label>
                </div>
              </div>

              <div class="form-group col-md-6">
                <label>Gomas de limpiadores:</label><br>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="gomas" id="gomas_si" value="si">
                  <label class="form-check-label" for="gomas_si">Sí</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="gomas" id="gomas_no" value="no">
                  <label class="form-check-label" for="gomas_no">No</label>
                </div>
              </div>

              <div class="form-group col-md-6">
                <label>Antena:</label><br>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="antena" id="antena_si" value="si">
                  <label class="form-check-label" for="antena_si">Sí</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="antena" id="antena_no" value="no">
                    <label class="form-check-label" for="gomas_no">No</label>
                </div>
              </div>

              <div class="form-group col-md-6">
                <label>Tapon de gasolina:</label><br>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="tapon" id="tapon_si" value="si">
                  <label class="form-check-label" for="antena_si">Sí</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="tapon" id="tapon_no" value="no">
                    <label class="form-check-label" for="gomas_no">No</label>
                </div>
              </div>
              <div class="form-group col-md-12">
                <button type="submit" class="btn btn-primary">Guardar</button>
              </div>
            </form>
          </div>
        </div>

      
      </div>
    </div>
  </body>
